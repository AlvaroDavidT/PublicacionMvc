@model List<PublicacionLista>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
</div>

<div class="card">
  <div class="card-header">
    Lista de publicaciones
  </div>
  <div class="card-body">
    <a asp-action="Publicacion" asp-controller="Home" asp-route-idPublicacion="0" class="btn btn-success btn-sm">Nueva Publicacion</a>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Titulo</th>
                <th>Fecha Publicacion</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
          @foreach (var item in Model)
          {
            <tr>
              
              <td>@item.titulo </td>
              <td>@item.fechaPublicacion</td>
              <td>
                <a asp-action="PublicacionDetalle" asp-controller="Home" asp-route-idPublicacion="@item.id" class="btn btn-info btn-sm">Seleccionar</a>
                <a asp-action="Publicacion" asp-controller="Home" asp-route-idPublicacion="@item.id" class="btn btn-primary btn-sm">Editar</a>
                <a asp-action="Eliminar" asp-controller="Home" asp-route-idPublicacion="@item.id" class="btn btn-danger btn-sm">Eliminar</a>
              </td>
            </tr>
          }
        </tbody>
    </table>
  </div>
</div>